<form name="create-user-form" id="create-user-form" method="post" action="/users/login">
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" placeholder="Email" required>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" autcomplete="off" required>
  </div>
  <button type="submit" class="btn btn-default" value="Create my account">Login</button>
</form>